{
	"name": "official",
	"version": "1.0.0",
	"description": "Official stages of HackforPlay",
	"main": "entry.js",
	"scripts": {
		"build": "node --experimental-modules build.mjs hack-rpg make-rpg make-rpg-2 make-rpg-3",
		"hack": "node --experimental-modules build.mjs hack-rpg && npx serve -s public/hack-rpg",
		"make": "node --experimental-modules build.mjs make-rpg && npx serve -s public/make-rpg",
		"make2": "node --experimental-modules build.mjs make-rpg-2 && npx serve -s public/make-rpg-2",
		"make3": "node --experimental-modules build.mjs make-rpg-3 && npx serve -s public/make-rpg-3",
		"typing": "node --experimental-modules build.mjs typing && npx serve -s public/typing",
		"postinstall": "npm run build",
		"test": "ava",
		"prettier": "prettier --config ./.prettierrc --write '**/*.js'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hackforplay/official.git"
	},
	"keywords": [
		"HackforPlay"
	],
	"author": "teramotodaiki",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/hackforplay/official/issues"
	},
	"homepage": "https://github.com/hackforplay/official#readme",
	"devDependencies": {
		"@babel/preset-env": "^7.3.1",
		"@babel/register": "^7.0.0",
		"@hackforplay/packager": "^1.0.2",
		"ava": "^1.2.0",
		"prettier": "^1.12.1",
		"serve": "^10.1.2"
	},
	"dependencies": {
		"compression": "^1.7.2",
		"connect": "^3.6.6",
		"cors": "^2.8.4",
		"morgan": "^1.9.0",
		"serve-static": "^1.13.2"
	},
	"ava": {
		"files": [
			"test/**/*.spec.js",
			"!test/helpers/**/*.js"
		],
		"cache": true,
		"concurrency": 5,
		"failFast": true,
		"failWithoutAssertions": false,
		"tap": true,
		"compileEnhancements": false,
		"require": [
			"@babel/register"
		],
		"babel": {
			"testOptions": {
				"presets": [
					[
						"@babel/preset-env",
						{
							"targets": {
								"node": "current"
							}
						}
					]
				]
			}
		}
	}
}
